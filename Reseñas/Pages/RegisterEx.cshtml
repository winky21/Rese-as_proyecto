@page
@model Areas.Identity.Pages.Account.RegisterModel
@{
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/registrar.css">
</head>

<div class="row">
   @* <br />
    <br />*@
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crear una nueva cuenta</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Correo </label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select name="genero-cine" id="genero-cine" class="form-control">
                    <option value="accion">Acción</option>
                    <option value="aventura">Aventura</option>
                    <option value="comedia">Comedia</option>
                    <option value="drama">Drama</option>
                    <option value="terror">Terror</option>
                    <option value="ciencia-ficcion">Ciencia ficción</option>
                    <option value="romance">Romance</option>
                    <option value="animacion">Animación</option>
                    <option value="fantasia">Fantasía</option>
                    <option value="documental">Documental</option>
                    <option value="musical">Musical</option>
                    <option value="thriller">Thriller</option>
                    <option value="western">Western</option>
                    <option value="historico">Histórico</option>
                    <option value="crimen">Crimen</option>
                    <option value="misterio">Misterio</option>
                    <option value="guerra">Guerra</option>
                    <option value="biografia">Biografía</option>
                    <option value="familiar">Familiar</option>
                    <option value="deporte">Deporte</option>
                </select>
                <label for="genero-cine">Género de cine</label>
            </div>

            <div id="display-genero"></div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
       
        </div>
        </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
<script>
    // Obtener el elemento select y el contenedor del campo de visualización
    const selectElement = document.getElementById('genero-cine');
    const displayContainer = document.getElementById('display-genero');

    // Escuchar el evento de cambio en el select
    selectElement.addEventListener('change', () => {
        // Obtener todas las opciones seleccionadas
        const selectedOptions = Array.from(selectElement.selectedOptions);

        // Obtener los valores seleccionados y concatenarlos en una cadena
        const selectedValues = selectedOptions.map(option => option.value).join(', ');

        // Obtener el valor actual del campo de visualización
        const currentText = displayContainer.textContent.trim();

        // Concatenar el valor actual con los nuevos valores seleccionados
        const newText = currentText ? currentText + ', ' + selectedValues : selectedValues;

        // Actualizar el contenido del campo de visualización
        displayContainer.textContent = newText;
    });
</script>